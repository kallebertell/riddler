.notification
  = "You are logged in as #{current_user.name}. "
  = link_to "Log out", :logout

.top
  %h1
    Round
    = @game.round_count;

.question
  %h1
    Who said this?

.status
  = @question.text

%br

%ul{:id => 'choices'}
  - for choice in @question.choices
    = render :partial => 'questions/choice', :locals => {:choice => choice}
